<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.limayeneha.todo.EditItemActivity">

    <TextView
        android:text="@string/edit_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="30dp"
        android:id="@+id/tvTextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="34sp"
        android:textStyle="normal|bold"
        android:fontFamily="sans-serif" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/tvTextView"
        android:layout_alignLeft="@+id/tvTextView"
        android:layout_alignStart="@+id/tvTextView"
        android:layout_marginTop="41dp"
        android:focusable="true"
        android:id="@+id/etEditItem" />

    <Button
        android:text="@string/save_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEditItem"
        android:layout_alignLeft="@+id/etEditItem"
        android:layout_alignStart="@+id/etEditItem"
        android:layout_marginTop="32dp"
        android:onClick="onSaveItem"
        android:id="@+id/btnSave" />
</RelativeLayout>
